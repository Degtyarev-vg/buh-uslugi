mixin footer-menu()
  +b('nav').footer-menu&attributes(attributes)
    +e('ul').list
      - let i = 1;
      each item in topMenu
        +e('li')(class='item' + ((i == 3) ? '_active' : '') class='' + (item.subMenu ? '_has-child' : ''))
          +e('a')(href=item.link class='link' class='' +
          ((i == 3) || (i == 4) ? 'link-scroll' : '')) !{item.text}
          if item.subMenu
            +e('ul').submenu
              - let j = 1;
              each subItem in item.subMenu
                +e('li')(class='submenu-item' + ((j == 2) ? '_active' : ''))
                  +e('a')(href=subItem.link).submenu-link !{subItem.text}
                - j++;
        - i++
